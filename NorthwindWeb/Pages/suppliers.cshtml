@page
@model NorthwindWeb.Pages.SuppliersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>Company Name</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            @for (int i = 0; i < Model.Suppliers.Count(); i++)
            {
                <tr>
                    <td>@Model.Suppliers.ElementAt(i)</td>
                    <td>@Model.Countries.ElementAt(i)</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row">
        <p>Enter a name for a new supplier:</p>
        <form method="POST">
            <div><input asp-for="Supplier.CompanyName" /></div>
            <input type="submit" />
        </form>
    </div>
</div>